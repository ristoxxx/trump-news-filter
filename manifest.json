{
  "manifest_version": 3,
  "name": "Trump News Filter",
  "version": "1.0.0",
  "description": "Filter Trump-related news locally in your browser.",
  "permissions": ["storage"],
  "action": {
    "default_popup": "popup.html"
  },
  "content_scripts": [
    {
      "matches": ["<all_urls>"],
      "js": ["contentScript.js"],
      "css": ["styles.css"]
    }
  ]
}
